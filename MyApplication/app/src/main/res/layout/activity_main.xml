<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.nabeel.myapplication.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Ethical Shopper Prototype"
        android:id="@+id/titleText"
        android:textSize="40sp"
        android:textAlignment="center"
        android:layout_marginTop="49dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Barcode Search"
        android:id="@+id/barcodeSearch"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/demoProduct"
        android:layout_alignStart="@+id/demoProduct"
        android:layout_alignRight="@+id/demoProduct"
        android:layout_alignEnd="@+id/demoProduct"
        android:onClick="launchBarcodeScanner"/>
    />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Demo Product"
        android:id="@+id/demoProduct"
        android:layout_below="@+id/barcodeSearch"
        android:layout_centerHorizontal="true"
        android:onClick="launchDemoOverview"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search Products"
        android:id="@+id/searchButton"
        android:layout_below="@+id/demoProduct"
        android:layout_alignLeft="@+id/demoProduct"
        android:layout_alignStart="@+id/demoProduct"
        android:layout_alignRight="@+id/demoProduct"
        android:layout_alignEnd="@+id/demoProduct"
        android:onClick="launchSearch"/>

</RelativeLayout>
